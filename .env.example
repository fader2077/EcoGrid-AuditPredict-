# Environment Variables for EcoGrid Audit Predict

# OpenAI API Key (Required for LLM features)
OPENAI_API_KEY=your_openai_api_key_here

# Taiwan Central Weather Administration API Key
CWA_API_KEY=your_cwa_api_key_here

# System Configuration
LOG_LEVEL=INFO
CACHE_ENABLED=true
CACHE_TTL_HOURS=24

# GPU Configuration (prevent CUDA OOM)
GPU_MEMORY_FRACTION=0.6
BATCH_SIZE=32
MAX_SEQUENCE_LENGTH=168

# Data Paths
DATA_RAW_PATH=data/raw
DATA_PROCESSED_PATH=data/processed
DATA_CACHE_PATH=data/cache
MODEL_PATH=models

# Taiwan Power Configuration
TAIPOWER_RETRY_ATTEMPTS=3
TAIPOWER_RETRY_DELAY=5

# Optimization Settings
OPTIMIZATION_TIME_HORIZON=24
BATTERY_CAPACITY_KWH=100
MAX_CONTRACT_CAPACITY_KW=500
