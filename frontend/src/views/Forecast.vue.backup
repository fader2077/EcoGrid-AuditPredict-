<template>
  <div class="space-y-6">
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h2 class="text-xl font-bold mb-4">ğŸ”® AI è² è¼‰é æ¸¬</h2>
      
      <!-- Controls -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">é æ¸¬æ™‚é•·</label>
          <input
            v-model.number="params.hours_ahead"
            type="number"
            min="1"
            max="168"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500"
          />
        </div>
        
        <div class="flex items-center">
          <label class="flex items-center cursor-pointer">
            <input
              v-model="params.use_transformer"
              type="checkbox"
              class="mr-2 h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded"
            />
            <span class="text-sm">ä½¿ç”¨ Transformer</span>
          </label>
        </div>
        
        <div class="flex items-center">
          <label class="flex items-center cursor-pointer">
            <input
              v-model="params.use_lstm"
              type="checkbox"
              class="mr-2 h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded"
            />
            <span class="text-sm">ä½¿ç”¨ LSTM</span>
          </label>
        </div>
      </div>
      
      <button
        @click="startPrediction"
        :disabled="loading"
        class="px-6 py-2 bg-primary-500 text-white rounded-lg hover:bg-primary-600 disabled:opacity-50"
      >
        {{ loading ? 'é æ¸¬ä¸­...' : 'é–‹å§‹é æ¸¬' }}
      </button>
    </div>
    
    <!-- Task Status -->
    <div v-if="taskId" class="bg-white rounded-lg shadow-sm p-6">
      <h3 class="text-lg font-bold mb-4">ä»»å‹™ç‹€æ…‹</h3>
      <div class="space-y-2">
        <div class="flex justify-between">
          <span>ç‹€æ…‹ï¼š</span>
          <span class="font-medium" :class="statusClass">{{ taskStatus }}</span>
        </div>
        <div class="flex justify-between">
          <span>é€²åº¦ï¼š</span>
          <span>{{ taskProgress }}%</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-2">
          <div
            class="bg-primary-500 h-2 rounded-full transition-all duration-300"
            :style="{ width: taskProgress + '%' }"
          ></div>
        </div>
      </div>
    </div>
    
    <!-- Results -->
    <div v-if="forecast" class="bg-white rounded-lg shadow-sm p-6">
      <h3 class="text-lg font-bold mb-4">é æ¸¬çµæœ</h3>
      
      <!-- Summary -->
      <div class="grid grid-cols-3 gap-4 mb-6">
        <div class="text-center p-4 bg-gray-50 rounded-lg">
          <p class="text-sm text-gray-600">å¹³å‡è² è¼‰</p>
          <p class="text-xl font-bold">{{ forecast.summary.avg_load_kw?.toFixed(1) }} kW</p>
        </div>
        <div class="text-center p-4 bg-gray-50 rounded-lg">
          <p class="text-sm text-gray-600">å³°å€¼è² è¼‰</p>
          <p class="text-xl font-bold">{{ forecast.summary.peak_load_kw?.toFixed(1) }} kW</p>
        </div>
        <div class="text-center p-4 bg-gray-50 rounded-lg">
          <p class="text-sm text-gray-600">ç¶ é›»æ¯”ä¾‹</p>
          <p class="text-xl font-bold text-primary-600">{{ forecast.summary.renewable_ratio?.toFixed(1) }}%</p>
        </div>
      </div>
      
      <!-- Chart -->
      <EnergyChart
        :data="forecastChartData"
        title="è² è¼‰é æ¸¬è¶¨å‹¢"
        height="450px"
      />
    </div>
  </div>
</template>

<script setup>
import { ref, computed } from 'vue'
import { forecastApi } from '../api/endpoints'
import EnergyChart from '../components/EnergyChart.vue'

const params = ref({
  hours_ahead: 24,
  use_transformer: false,
  use_lstm: false
})

const loading = ref(false)
const taskId = ref(null)
const taskStatus = ref('')
const taskProgress = ref(0)
const forecast = ref(null)

const statusClass = computed(() => {
  if (taskStatus.value === 'completed') return 'text-green-600'
  if (taskStatus.value === 'failed') return 'text-red-600'
  if (taskStatus.value === 'running') return 'text-blue-600'
  return 'text-gray-600'
})

const forecastChartData = computed(() => {
  if (!forecast.value) return { timestamps: [], series: {} }
  
  return {
    timestamps: forecast.value.forecast_data.map(d => 
      new Date(d.timestamp).toLocaleTimeString('zh-TW', { hour: '2-digit', minute: '2-digit' })
    ),
    series: {
      'é æ¸¬è² è¼‰': forecast.value.forecast_data.map(d => d.predicted_load_kw),
      'å¤ªé™½èƒ½': forecast.value.forecast_data.map(d => d.predicted_solar_kw),
      'é¢¨åŠ›': forecast.value.forecast_data.map(d => d.predicted_wind_kw)
    }
  }
})

const startPrediction = async () => {
  loading.value = true
  try {
    const result = await forecastApi.predict(params.value)
    taskId.value = result.task_id
    pollTaskStatus()
  } catch (error) {
    console.error('Failed to start prediction:', error)
  } finally {
    loading.value = false
  }
}

const pollTaskStatus = async () => {
  if (!taskId.value) return
  
  const interval = setInterval(async () => {
    try {
      const status = await forecastApi.getStatus(taskId.value)
      taskStatus.value = status.status
      taskProgress.value = status.progress
      
      if (status.status === 'completed') {
        clearInterval(interval)
        // Fetch forecast results
        forecast.value = await forecastApi.getLatest()
      } else if (status.status === 'failed') {
        clearInterval(interval)
        alert('é æ¸¬å¤±æ•—ï¼š' + status.error_message)
      }
    } catch (error) {
      clearInterval(interval)
      console.error('Failed to poll task status:', error)
    }
  }, 2000)
}
</script>
