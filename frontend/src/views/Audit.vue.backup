<template>
  <div class="space-y-6">
    <!-- Generate Report -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h2 class="text-xl font-bold mb-4">ğŸ“„ ç”Ÿæˆå¯©è¨ˆå ±å‘Š</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">å ±å‘Šé¡å‹</label>
          <select
            v-model="params.report_type"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg"
          >
            <option value="daily">æ¯æ—¥å ±å‘Š</option>
            <option value="weekly">æ¯é€±å ±å‘Š</option>
            <option value="monthly">æ¯æœˆå ±å‘Š</option>
          </select>
        </div>
        
        <button
          @click="generateReport"
          :disabled="loading"
          class="self-end px-6 py-2 bg-primary-500 text-white rounded-lg hover:bg-primary-600 disabled:opacity-50"
        >
