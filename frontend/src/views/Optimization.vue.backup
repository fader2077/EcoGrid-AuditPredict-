<script setup>
import { ref, computed } from 'vue'
import { optimizationApi } from '../api/endpoints'
import EnergyChart from '../components/EnergyChart.vue'

const params = ref({
  hours_ahead: 24,
  initial_soc: 0.5,
  battery_capacity_kwh: null,
  forecast_id: null
})

const loading = ref(false)
const plan = ref(null)

const scheduleChartData = computed(() => {
  if (!plan.value?.schedule) return { timestamps: [], series: {} }
  
  return {
    timestamps: plan.value.schedule.map(s => 
      new Date(s.timestamp).toLocaleTimeString('zh-TW', { hour: '2-digit', minute: '2-digit' })
    ),
    series: {
      'é›»ç¶²è³¼é›»': plan.value.schedule.map(s => s.grid_buy_kw),
      'é›»æ± ': plan.value.schedule.map(s => s.battery_kw),
      'å¤ªé™½èƒ½': plan.value.schedule.map(s => s.solar_used_kw),
      'é›»åƒ¹': plan.value.schedule.map(s => s.tariff)
    }
  }
})

const startOptimization = async () => {
  loading.value = true
  try {
    const result = await optimizationApi.optimize(params.value)
    
    // Poll for completion
    const interval = setInterval(async () => {
      const status = await optimizationApi.getStatus(result.task_id)
      
      if (status.status === 'completed') {
        clearInterval(interval)
        const planId = status.result.plan_id
        plan.value = await optimizationApi.getPlan(planId)
        loading.value = false
      } else if (status.status === 'failed') {
        clearInterval(interval)
        alert('å„ªåŒ–å¤±æ•—ï¼š' + status.error_message)
        loading.value = false
      }
    }, 2000)
  } catch (error) {
    console.error('Failed to start optimization:', error)
    loading.value = false
  }
}
</script>
